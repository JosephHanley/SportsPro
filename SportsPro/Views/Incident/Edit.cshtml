@model Incident
@{
    ViewData["Title"] = ViewBag.Title + " Incident";
}

<h1>@ViewBag.Title</h1>

<form asp-action="Edit" method="post" class="form-horizontal">

    <div asp-validation-summary="All" class="text-danger col"></div>

    <div class="row">
        <label asp-for="CustomerID" class="control-label col-sm-3">Customer:</label>
        <select asp-for="CustomerID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Customers,"CustomerID", "FullName", Model.CustomerID.ToString()))">
            <option value="">Select a customer</option>
        </select>
    </div>
    <div class="row">
        <label asp-for="ProductID" class="control-label col-sm-3">Product:</label>
        <select asp-for="ProductID" class="form-control" 
                asp-items="@(new SelectList(ViewBag.Products,"ProductID", "Name", Model.ProductID.ToString()))">
            <option value="">Select a product</option>
        </select>
    </div>
    <div class="row">
        <label asp-for="Title" class="control-label col-sm-3">Title:</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="row">
        <label asp-for="Description" class="control-label col-sm-3">Description:</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="row">
        <label asp-for="TechnicianID" class="control-label col-sm-3">Technician:</label>
        <select asp-for="TechnicianID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Technicians,"TechnicianID", "Name", Model.TechnicianID.ToString()))">
            <option value="">Select a technician</option>
        </select>
    </div>
    <div class="row">
        <label asp-for="DateOpened" class="control-label col-sm-3">Date Opened:</label>
        <input asp-for="DateOpened" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="DateClosed" class="control-label col-sm-3">Date Closed:</label>
        <input asp-for="DateClosed" class="form-control col-sm-3" />
    </div>

    <input type="hidden" asp-for="IncidentID" />
    <input type="hidden" asp-for="Customer" />
    <input type="hidden" asp-for="Product" />
    <input type="hidden" asp-for="Technician" />

    <div class="row">
        <div class="col p1-0">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>
</form>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>