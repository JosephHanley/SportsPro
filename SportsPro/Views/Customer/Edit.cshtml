@model Customer
@{
    ViewData["Title"] = ViewBag.Title + " Customer";
}

<h1>@ViewBag.Title</h1>

<form asp-action="Edit" method="post" class="form-horizontal">

    <div asp-validation-summary="All" class="text-danger col"></div>

    <div class="row">
        <label asp-for="FirstName" class="control-label col-sm-3">First Name:</label>
        <input asp-for="FirstName" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="LastName" class="control-label col-sm-3">Last Name:</label>
        <input asp-for="LastName" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="Address" class="control-label col-sm-3">Address:</label>
        <input asp-for="Address" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="City" class="control-label col-sm-3">City:</label>
        <input asp-for="City" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="State" class="control-label col-sm-3">State:</label>
        <input asp-for="State" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="PostalCode" class="control-label col-sm-3">Postal Code:</label>
        <input asp-for="PostalCode" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="CountryID" class="control-label col-sm-3">Country:</label>
        <select asp-for="CountryID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Countries,"CountryID", "Name", Model.CountryID))">
            <option value="">Select a country</option>
        </select>
    </div>

    <div class="row">
        <label asp-for="Email" class="control-label col-sm-3">Email:</label>
        <input asp-for="Email" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="Phone" class="control-label col-sm-3">Phone:</label>
        <input asp-for="Phone" class="form-control col-sm-3" />
    </div>

    <input type="hidden" asp-for="CustomerID" />

    <div class="row">
        <div class="col p1-0">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>