@model Product
@{
    ViewData["Title"] = ViewBag.Title + " Product";
}

<h1>@ViewBag.Title</h1>

<form asp-action="Edit" method="post" class="form-horizontal">

    <div asp-validation-summary="All" class="text-danger col"></div>

    <div class="row">
        <label asp-for="ProductCode" class="control-label col-sm-3">Code:</label>
        <input asp-for="ProductCode" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="Name" class="control-label col-sm-3">Name:</label>
        <input asp-for="Name" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="YearlyPrice" class="control-label col-sm-3">Yearly Price:</label>
        <input asp-for="YearlyPrice" class="form-control col-sm-3" />
    </div>
    <div class="row">
        <label asp-for="ReleaseDate" class="control-label col-sm-3">Release Date:</label>
        <input asp-for="ReleaseDate" class="form-control col-sm-3" />
    </div>

    <input type="hidden" asp-for="ProductID" />

    <div class="row">
        <div class="col p1-0">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>